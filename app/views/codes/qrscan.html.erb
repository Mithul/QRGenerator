<h1>Upload Single QR code</h1>
<%= form_for :list, :url => url_for(:controller => 'codes', :action => 'qrscanner'), :method => 'POST' do |f| %>
 	<%= f.label :file %>:
  	<%= f.file_field :file , :autofocus => true, class: 'form-contro' %>
  	<br>

  	<%= f.submit :Submit, class: 'btn btn-primary' %>
<% end %>
<h1>(or)</h1>

<h1>Upload PDF file generated by this site</h1>
<%= form_for :list, :url => url_for(:controller => 'codes', :action => 'pdfscanner'), :method => 'POST' do |f| %>
 	<%= f.label :file %>:
  	<%= f.file_field :file , :autofocus => true, class: 'form-contro' %>
  	<br>

  	<%= f.submit :Submit, class: 'btn btn-primary' %>
<% end %>